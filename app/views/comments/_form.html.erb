<h2 class="font-size form_group catch">　コメント　</h2>
<div class="rating-box mt-3">
  <%= form_with model: comment, url: customer_comments_path(customer), local: true do |f| %>
    <div class="main-rating">
      <div class="ratings mb-3">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
      <div class="ml-3 rating-value-display far"><span id="rating-value-display", class="font-size">0</span><span class="font-size">/5</span></div>
    </div>
    <div class="form_group">
    <%= f.hidden_field :customer_id, value: customer.id %>
    <%= f.hidden_field :score, id: "rating-value" %>
    <%= f.text_field :body, class: "form-control" %>
    <br>
    <%= f.submit "コメント", class: "btn width1" %>
    <br>
    </div>
  <% end %>
</div>

<%= javascript_pack_tag 'reviews' %>