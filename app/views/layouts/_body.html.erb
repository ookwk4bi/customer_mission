<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div class="alert alert-danger">
      <p><b><%= @customer.errors.count %>件のエラーがあります</b></p>
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :family_name %>
    <%= f.text_field :family_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :given_name %>
    <%= f.text_field :given_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :detail %>
    <%= f.text_field :detail, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :account_number %>
    <%= f.text_field :account_number, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :type_id %>
    <%= f.collection_select(:type_id, Type.all, :id, :name, {}, {class:"form-control"}) %>
  </div>
<% end %>